PORT=8080

# PostgreSQL connection (preferred; Render provides this as DATABASE_URL)
DATABASE_URL=postgres://username:password@localhost:5432/keelworks_keelcompass_db
DB_DIALECT=postgres
DB_SSL=false

# Optional discrete fields (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_USER=postgres
DB_PASS=yourpassword
DB_DATABASE=keelworks_keelcompass_db

# Logging configuration
LOG_PATH=logs/app.log
DB_LOGGING=false

# Authentication
JWT_SECRET=yoursecret
